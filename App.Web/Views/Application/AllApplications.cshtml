@model IEnumerable<App.Entities.Application>
@using GridMvc.Html
@{
    ViewBag.Title = "Applications";
}
<link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" type="text/css" />
<div class="panel panel-default">
    <div class="panel-heading"><h4>@ViewBag.Title</h4></div>
    <div class="panel-body">
        <div class="row">
            @Html.Grid(Model).Columns(columns =>
            {
                columns.Add(col => col.Id,"Id").Titled("Application ID");
                columns.Add(col => col.CreatedBy).Titled("Created By").Sortable(true).Filterable(true);
                columns.Add(col => col.Status).Titled("Status").RenderValueAs(col => col.Status==0?"Saved":"Submitted").Sortable(true).Filterable(true);
                columns.Add().Encoded(false).Sanitized(false)
               .RenderValueAs(col => @Html.ActionLink("Edit", "Index","Application", new { Id = col.Id }, null));
            }).WithPaging(10)
        </div>
    </div>
</div>


@section Scripts {
    <script src="@Url.Content("~/Scripts/gridmvc.min.js")" type="text/javascript"></script>
}
